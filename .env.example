# Required
TELEGRAM_BOT_TOKEN=replace_with_bot_token

# Optional
OPENAI_API_KEY=replace_with_api_key

# Runtime identity labels (public-safe defaults)
# TG_HOST_LABEL=local host
# TG_ADMIN_NAME=
# TG_BOT_USERNAME=
# TG_PROJECT_PATH_HINT=
# TG_ENABLE_DANGEROUS_COMMANDS=true

# Core directories
# TG_DATA_DIR=~/.claude
# TG_LOG_DIR=~/.claude/logs/telegram-gateway
# TG_HEALTH_FILE=~/.claude/gateway/health.json
# TG_PROJECT_DIR=<auto-detected>
# TG_PM2_APP_NAME=telegram-gateway

# AI CLI binaries
# CLAUDE_BIN=~/.local/bin/claude
# CODEX_BIN=/opt/homebrew/bin/codex

# Data files
# TG_MEMORY_FILE=~/.claude/memory.md
# TG_ALLOWLIST_FILE=~/.claude/telegram-allowlist.json
# TG_TODOS_FILE=~/.claude/telegram-todos.json
# TG_NOTES_FILE=~/.claude/telegram-notes.json
# TG_REMINDERS_FILE=~/.claude/telegram-reminders.json

# Gateway files
# TG_PID_FILE=<project>/gateway.pid
# TG_MCP_CONFIG=<project>/mcp-config.json
# TG_GATEWAY_CONFIG=<project>/config/gateway.json

# Working directory
# TG_WORKING_DIR=~

# WhisperKit STT
# WHISPERKIT_HOST=localhost
# WHISPERKIT_PORT=50060
